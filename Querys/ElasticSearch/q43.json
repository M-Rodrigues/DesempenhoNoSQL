POST /customers/_search?pretty
{
  "query": {
    "bool": {
      "filter": {
        "bool": {
          "must": [
            {
              "match": {
                "c_region": "AMERICA"
              }
            },
            {
              "bool": {
                "filter": {
                  "nested": {
                    "inner_hits": {},
                    "path": "lineorder",
                    "query": {
                      "bool": {
                        "must": [
                          {
                            "match": {
                              "lineorder.part.p_category": "MFGR#14"
                            }
                          },
                          {
                            "match": {
                              "lineorder.supplier.s_nation": "UNITED STATES"
                            }
                          },
                          {
                            "range": {
                              "lineorder.orderdate.d_year": {
                                "gte": 1997,
                                "lte": 1998
                              }
                            }
                          }
                        ]
                      }
                    }
                  }
                }
              }
            }
          ]
        }
      }
    }
  },
  "aggs": {
    "lineorder": {
      "nested": {
        "path": "lineorder"
      },
      "aggs": {
        "only_loc": {
          "filter": {
            "bool": {
              "must": [
                {
                  "match": {
                    "lineorder.part.p_category": "MFGR#14"
                  }
                },
                {
                  "match": {
                    "lineorder.supplier.s_nation": "UNITED STATES"
                  }
                },
                {
                  "range": {
                    "lineorder.orderdate.d_year": {
                      "gte": 1997,
                      "lte": 1998
                    }
                  }
                }
              ]
            }
          },
          "aggs": {
            "year": {
              "terms": {
                "field": "lineorder.orderdate.d_year",
                "order": {
                  "_key": "asc"
                },
                "size": 10000
              },
              "aggs": {
                "s_city": {
                  "terms": {
                    "field": "lineorder.supplier.s_city",
                    "order": {
                      "_key": "asc"
                    },
                    "size": 10000
                  },
                  "aggs": {
                    "p_brand1": {
                      "terms": {
                        "field": "lineorder.part.p_brand1",
                        "order": {
                          "_key": "asc"
                        },
                        "size": 10000
                      },
                      "aggs": {
                        "profit": {
                          "sum": {
                            "script": "doc[\"lineorder.lo_revenue\"].value - doc[\"lineorder.lo_supplycost\"].value"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "size": 0
}